{% extends 'base.html.twig' %}

{% block title %}Hello ConcertController!{% endblock %}

{% block body %}

<div class="container py-5">
    <div class="row">
        <div class="col">
            <h1 class="text-center">This is a list of member :</h1>
        </div>
    </div>
    <div class="row">

        {% for member in band.members %}
        <div class="col-md-4">
            <div class="card h-100 py-3 p-4 border-0 shadow">
                <img class="img-fluid" src="{{ asset('member.getPicture') }}">
                <h2 class="my-3">{{ member.getFirstName }}</h2>
            </div>
        </div>
        {% else %}
        <p>Oups ! Ce groupe n'a aucun membre</p>
        {% endfor %}
    </div>
</div>

{% endblock %}